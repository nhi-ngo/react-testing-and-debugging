{
	"parser": "babel-eslint",
	"env": {
		"browser": true,
		"es2021": true,
		"jest": true
	},
	"root": true,
	"extends": ["airbnb", "plugin:react/recommended", "prettier"],
	"parserOptions": {
		"ecmaFeatures": {
			"jsx": true
		},
		"ecmaVersion": 12,
		"sourceType": "module"
	},
	"plugins": ["react", "prettier"],
	"rules": {
		"react/jsx-filename-extension": [
			1,
			{
				"extensions": [".js", ".jsx"]
			}
		],
		"react/jsx-one-expression-per-line": "off",
		"react/react-in-jsx-scope": "off",
		"react/prop-types": 0,
		"no-unused-vars": "warn",
		"no-console": "off",
		"prettier/prettier": [
			"error",
			{
				"trailingComma": "es5",
				"singleQuote": true,
				"printWidth": 100,
				"tabWidth": 2,
				"semi": true
			}
		]
	}
}
